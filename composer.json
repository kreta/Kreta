{
    "name": "kreta/kreta",
    "description": "Modern project manager for software development",
    "keywords": [
        "project",
        "manager",
        "development",
        "tool"
    ],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php": "^7.0",
        "bengor-user/user-bundle": "^0.7",
        "bengor-user/doctrine-orm-bridge-bundle": "^1.1",
        "bengor-user/simple-bus-bridge-bundle": "^1.0",
        "bengor-user/swift-mailer-bridge-bundle": "^1.0",
        "bengor-user/symfony-routing-bridge-bundle": "^1.0",
        "bengor-user/symfony-security-bridge-bundle": "^1.0",
        "bengor-user/twig-bridge-bundle": "^1.0.2",
        "doctrine/collections": "^1.3",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.2",
        "doctrine/orm": "^2.5",
        "incenteev/composer-parameter-handler": "^2.0",
        "keyvanakbary/slugifier": "^4.0",
        "lexik/jwt-authentication-bundle": "^2.0",
        "overblog/graphql-bundle": "^0.6.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/httplug-bundle": "^1.3",
        "ramsey/uuid": "^3.5",
        "sensio/distribution-bundle": "^5.0",
        "simple-bus/asynchronous-bundle": "^2.2",
        "simple-bus/doctrine-orm-bridge": "^4.0",
        "simple-bus/rabbitmq-bundle-bridge": "^3.0",
        "simple-bus/symfony-bridge": "^4.1",
        "symfony/monolog-bundle": "^2.8",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/symfony": "3.1.*",
        "warezgibzzz/query-bus-bundle": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.12",
        "phpspec/phpspec": "^3.1"
    },
    "scripts": {
        "lifecycle-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-install-cmd": [
            "@lifecycle-scripts"
        ],
        "post-update-cmd": [
            "@lifecycle-scripts"
        ],
        "cs": [
            "php-cs-fixer fix --config-file=etc/phpcs/.php_cs",
            "php-cs-fixer fix --config-file=etc/phpcs/.phpspec_cs"
        ],
        "test": "phpspec run"
    },
    "autoload": {
        "psr-4": {
            "Kreta\\IdentityAccess\\": "IdentityAccess/src/",
            "Kreta\\IdentityAccess\\Tests\\": "IdentityAccess/tests/",
            "Kreta\\SharedKernel\\": "SharedKernel/src/",
            "Kreta\\SharedKernel\\Tests\\": "SharedKernel/tests/",
            "Kreta\\TaskManager\\": "TaskManager/src/",
            "Kreta\\TaskManager\\Tests\\": "TaskManager/tests/"
        },
        "exclude-from-classmap": [
          "/tests/"
        ]
    },
    "extra": {
        "incenteev-parameters": [
            {
                "file": "TaskManager/parameters.yml"
            },
            {
                "file": "IdentityAccess/parameters.yml"
            }
        ],
        "branch-alias": {
            "dev-master": "0.7.x-dev"
        }
    }
}
