{
    "name": "kreta/notification",
    "description": "Kreta notification component",
    "keywords": [
        "project",
        "management",
        "development",
        "tool",
        "notification",
        "component"
    ],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                        ">=5.4",
        "kreta/project":              "^0.4.0",
        "symfony/routing":            "^2.7|^3.0",
        "symfony/swiftmailer-bundle": "^2.3"
    },
    "require-dev": {
        "phpspec/phpspec":            "^2.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kreta/FOSUserBundle"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kreta\\Component\\Notification\\": ""
        },
        "exclude-from-classmap": ["/spec/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Kreta\\Component\\Notification\\spec\\": "spec/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5-dev"
        }
    }
}
