        "kreta/core":                          "~0.2.0",
        "kreta/issue":                         "~0.2.0",
        "kreta/user":                          "~0.2.0"
    },
    "require-dev": {
        "phpspec/phpspec":                     "~2.1",
        "henrikbjorn/phpspec-code-coverage":   "~1.0",
